{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Text\Amendment list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Startline</th>
                <th>Amendmenttype</th>
                <th>Amendmentcontent</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('text_amendment_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.startLine }}</td>
                <td>{{ entity.amendmentType }}</td>
                <td>{{ entity.amendmentContent }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('text_amendment_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('text_amendment_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('text_amendment_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
