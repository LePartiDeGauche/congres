{% if contribs is empty %}
    <p>Pas de contribution validée.</p>
{% else %}
<table class="table tablesorter">
    <thead>
        <tr>
            <th>Titre</th>
            <th>Auteur</th>
            <th>Type de dépôt</th>
            <th>Signatures</th>
            <th>dont CN</th>
            {% block thead_signed %}
            <th>Signée</th>
            {% endblock %}
        </tr>
    </thead>
    <tbody>
    {% for contrib in contribs %}
        <tr>
            <td>
                <a href="{{ path('contribution_view', {id: contrib.entity.id}) }}">
                    {{ contrib.entity.title }}
                </a>
            </td>
            <td>{{ contrib.entity.author.profile.firstname }} {{ contrib.entity.author.profile.lastname }}</td>
            <td>
                {% if contrib.entity.depositType == constant('DEPOSIT_TYPE_INDIVIDUAL', contrib.entity) %}
                    individuel
                {% endif %}
                {% if contrib.entity.depositType == constant('DEPOSIT_TYPE_SEN', contrib.entity) %}
                    pour le Secrétariat Exécutif National
                {% endif %}
                {% if contrib.entity.depositType == constant('DEPOSIT_TYPE_COMMISSION', contrib.entity) %}
                    pour la commission {{ contrib.entity.depositTypeValue }}
                {% endif %}
            </td>
            <td>{{ contrib.adhvote }}</td>
            <td>{{ contrib.cnvote }}</td>
            {% block contrib_vote %}
            <td>
                {% if contrib.uservote %}
                    <span class="glyphicon glyphicon-check" aria-hidden="true"></span>
                {% endif %}
                <span class="sr-only">Signée</span>
            </td>
            {% endblock %}
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endif %}
