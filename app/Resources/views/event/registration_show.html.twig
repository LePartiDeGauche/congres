{% extends '::base.html.twig' %}

{% block body -%}
<div class="container">
    <div class="row">
        <h1>Votre inscription à l'évenement {{event.name}}</h1>
        <p>
        {{event.description}}
        </p>
        <h2>Rôle</h2>
        <ul>
            <li>{{ eventRegistration.role }}</li>
        </ul>



        <h2>Hebergement</h2>
        {% if eventRegistration.needHosting %}
        Vous avez besoin d'un hebergement militant
        {% else %}
        Vous n'avez pas besoin d'un hebergement militant
        {% endif %}

        <h2>Repas </h2>
        {% if eventRegistration.meals.count > 0 %}
        <ul>
            {% for meal in eventRegistration.meals %}
            <li>{{meal.name}} à {{meal.mealTime}}</li>
            {% endfor %}
        </ul>
        {% else %}
        Pas de repas
        {% endif %}
        <h2>Paiement</h2>
        
        <table class="table">
            <thead>
                <tr>
                    <th>Transaction</th>
                    <th>Montant</th>
                    <th>Methode de paiement</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                {% for payment in eventRegistration.payments %}
                <tr>
                    <td>{{payment.id}}</td>
                    <td>{{payment.amount}}€</td>
                    <td>{{payment.method |trans }}</td>
                    <td>{{payment.status |trans }}</td>
                </tr>
                {%endfor%}
            </tbody>
        </table>
    </div><!-- .row -->
</div><!-- .container -->
{% endblock %}
