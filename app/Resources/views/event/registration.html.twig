{% extends '::base.html.twig' %}

{% block body %}

<div class="container">
    <div class="row">
        <h1>Inscription à l'évenement {{ event.name }}</h1>
        <p>
        {{event.description}}
        </p>
        {{ form_start(form) }}

        <h2>Rôle</h2>
        <p class="text-muted">Quel sera votre rôle durant l'évenement ?</p>

        {{ form_errors(form.role) }}
        {{ form_widget(form.role) }}
        <h2>Hébergement</h2>
        <p class="text-muted">Avez-vous besoin d'un hebergement militant ?</p>
        {{ form_widget(form.needHosting)}}
        <h2>Repas </h2>
        <p class="text-muted">Cocher si vous souhaiter benificier du repas fourni par l'organisation</p>
        {{ form_widget(form.meals)}}

        <h2>Tranche de revenu / Tarif</h2>
        <p class="text-muted">Selectionner selon votre revenu mensuel</p>

        {{ form_errors(form.cost) }}
        {{ form_widget(form.cost) }}

        <h2>Mode de Paiement</h2>
        <p class="text-muted">Selectionner selon votre mode de paiment, si vous choisissez le paiement en ligne, vous
        serez redirigé sur le site de paiement Paybox</p>

        {{ form_errors(form.paymentMode) }}
        {{ form_widget(form.paymentMode) }}

        <h2>Commentaire</h2>
        <p class="text-muted">Vous avez une question, un point d'attention, des information à
        données pour l'hébergement militant ou tout autre chose, c'est ici !</p>
        {{ form_widget(form.comment) }}

        {{form_rest(form)}}
        {{ form_end(form) }}
    </div>
</div>

</ul>
{% endblock %}
