{% extends '::base.html.twig' %}

{% block title %}Liste des textes de {{textGroup.name}}{% endblock %}
{% block javascripts %}
{{ parent() }}
<script type="text/javascript" src="{{ asset('js/jquery.tablesorter.min.js') }}"></script>
<script type="text/javascript">
$(document).ready(function()
        {
            $(".tablesorter").tablesorter({
                cssAsc: "glyphicon glyphicon-sort-by-attributes-alt",
                cssDesc: "glyphicon glyphicon-sort-by-attributes",
            }
            );
        }
        );
</script>
{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Textes de {{ textGroup.name }}</h1>
            <p>
                {{textGroup.description}}
            </p>

            {% if is_granted('create_text', textGroup) %}
            <p>
                <a href="{{ path('text_create', {group_id: textGroup.id}) }}">
                    DÃ©poser un texte pour <em>{{ textGroup.name }}</em>
                </a>
            </p>
            {% endif %}

            {% if reportOrgans %}
            {% if is_granted('report_amend', textGroup) %}
                <h2>Soumettre des amendements</h2>
                <p>
                {% for organ in reportOrgans %}
                    <a href="{{ path('amendment_submit', {text_group_id: textGroup.id, organ_id: organ.id}) }}">
                        Soumettre pour <strong>{{ organ.name }}</strong>
                    </a>
                {% endfor %}
                </p>
            {% endif %}
            {% endif %}

        </div><!-- .col-md-12 -->
    </div><!-- .row -->
</div><!-- .container -->
{% endblock %}
