{% extends '::base.html.twig' %}

{% block title %}Signer le texte : "{{ text.title }}"{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-6">
<h1>Signer le texte {{ text.title }}</h1>
            <form method="post" action="{{ path('text_vote', {group_id: textGroup.id,
text_id: text.id}) }}">
                {{ form_widget(form) }}
                <p>
Veux-tu vraiment signer la <strong> {{ textGroup.name}}: "{{ text.title }}" ?
                </p>
                <p>
                Il n'est pas possible d'annuler cette op√©ration.
<strong>On ne peut voter que pour {{ textGroup.maxVotesByAdherent }} {{ textGroup.name }}</strong>
                </p>
                <div class="pull-right">
                    <input type="submit" class="btn btn-primary" value="Signer" />
                    <a class="btn btn-default" href="{{ path('text_list', {group_id: textGroup.id} ) }}">Annuler</a>
                </div>
            </form>
        </div>
</div>
{% endblock %}
