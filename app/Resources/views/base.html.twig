<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Site des adhérents du Parti de Gauche{% endblock %}</title>
        {% block stylesheets %}
        <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" rel="stylesheet">
        <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('css/main.css') }}" />
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Menu</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{path('homepage')}}">
                        <img src="{{ asset('img/logo.png') }}" alt="Logo du Parti de Gauche"/>
                    </a>
                </div>
                <div class="collapse navbar-collapse">
                    {% block navbar %}
                    <ul class="nav navbar-nav">
                        {% block navLinks %}
                        {% if is_granted('ROLE_USER') %}
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"
                                                                role="button" aria-expanded="false">Textes du congrès<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a href="{{ path('downloads', {filename: 'EnMouvementCitoyen_ne_s_version def.pdf'}) }}">
                                        En mouvement, citoyen-ne-s&nbsp;!
                                    </a>
                                </li>
                                <li>
                                    <a href="{{ path('downloads', {filename: 'Statuts version def.doc.pdf'}) }}">
                                        Statuts
                                    </a>
                                </li>
                                <li>
                                    <a href="{{ path('downloads', {filename: 'RI version def.pdf'}) }}">
                                        Réglement intérieur
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"
                               role="button" aria-expanded="false">
                               Conseil National<span class="caret"></span>
                           </a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"
                               role="button" aria-expanded="false">
                               Circulaires<span class="caret"></span>
                           </a>
                           <ul class="dropdown-menu" role="menu">
                               <li>
                                   <a href="{{ path('downloads', {filename: 'Circulaire 2015-24.pdf'}) }}">
                                       Circulaire 2015-24.pdf
                                   </a>
                                   <a href="{{ path('downloads', {filename: 'Circulaire 2015-23.pdf'}) }}">
                                       Circulaire 2015-23.pdf
                                   </a>
                                   <a href="{{ path('downloads', {filename: 'Circulaire 2015-22.pdf'}) }}">
                                       Circulaire 2015-22.pdf
                                   </a>
                                   <a href="{{ path('downloads', {filename: 'Circulaire 2015-21.pdf'}) }}">
                                       Circulaire 2015-21.pdf
                                   </a>
                                   <a href="{{ path('downloads', {filename: 'Circulaire 2015-20.pdf'}) }}">
                                       Circulaire 2015-20.pdf
                                   </a>
                                   <a href="{{ path('downloads', {filename: 'Circulaire 2015-19.pdf'}) }}">
                                       Circulaire 2015-19.pdf
                                   </a>
                               </li>
                           </ul>
                        </li>
                        {% endif %}
                    </ul>
                    {% endblock %}
                    <ul class="nav navbar-nav navbar-right">
                        {% if is_granted('ROLE_ADMIN') %}
                        <li><a href="{{ path('sonata_admin_dashboard') }}">Administration</a></li>
                        {% endif %}
                        {% if is_granted('ROLE_USER') %}
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Mon compte ({{ app.user.email }})<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="{{ path('organ_adherent_list') }}">Mes Instances</a></li>
                                <li><a href="{{ path('text_user_list') }}">Mes textes</a></li>
                                <li><a href="{{ path('event_adherent_registration_list') }}">Mes inscriptions</a></li>
                                <li><a href="{{ path('booking_registration_list') }}">Mes hébergements</a></li>
                                <li><a href="{{ path('adherent_profile') }}">Mon profil</a></li>
                                <li><a href="{{ path('fos_user_change_password') }}">Changer de mot de passe</a></li>
                            </ul>
                        </li>
                        <li><a href="{{ path('fos_user_security_logout') }}">Déconnexion</a></li>
                        {% else %}
                        <li><a href="{{ path('fos_user_registration_register') }}">Inscription</a></li>
                        <li><a href="{{ path('fos_user_security_login') }}">Connexion</a></li>
                        {% endif %}
                    </ul>
                    {% endblock %}
                </div><!--/.nav-collapse -->
            </div>
        </div>
        {% block body %}{% endblock %}
        {% block javascripts %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
        {% endblock %}
    </body>
</html>
